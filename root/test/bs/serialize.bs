use lang:bs;
use lang:bs:macro;
use core:io;

/**
 * Serializable class.
 */
class Data : persist {
	Int a;
	Int b;
	Employee data;

	init() {
		init() { a = 5; b = 8; }
	}

	// Output. Should be automatically generated...
	void write(ObjOStream to) {
		if (to.startObject(this)) {
			to.member("a", named{core:Int});
			to.member("b", named{core:Int});
			to.member("c", named{core:Bool});
			to.member("data", named{Employee});
			to.endMembers();

			a.write(to);
			b.write(to);
			true.write(to);
			data.write(to);

			to.end();
		}
	}
}

/**
 * Another serializable class.
 */
class Employee : persist {
	Str name;
	Int coolness;

	init() {
		init() { name = "John Smith"; coolness = 500; }
	}

	void write(ObjOStream to) {
		if (to.startObject(this)) {
			to.member("name", named{core:Str});
			to.member("coolness", named{core:Int});
			to.endMembers();

			name.write(to);
			coolness.write(to);

			to.end();
		}
	}
}


// Persist decorator
void persist(Class c) {
	print("Decorator: " # c);
}

// Test serialization.
void testSerialize() {
	Data x;
	MemOStream out;
	ObjOStream obj(out);

	x.write(obj);

	MemIStream in(out.buffer);
	util:TextObjStream read(in);
	print("Result: " # read.read());
}
